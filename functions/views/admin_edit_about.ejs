<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('templates/admin_head'); -%>
       

</head>

<body id="page-top">

        <%- include('templates/admin_navbar'); -%>

  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('templates/admin_sidebar'); -%>

    <div id="content-wrapper">

      <div class="container-fluid">


        <!-- Page Content -->
        <h1>About</h1>
        <hr>
      
       
        <div class="form-group">
            <div class="form-label-group">                            
                <textarea class="form-control" style="width:100%" id="aboutTxt" rows="8" placeholder="Masukkan teks About"></textarea>
            </div>
        </div>
        
        <a class="btn btn-primary btn-block" id="simpanBtn">Simpan</a>
            

      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <%- include('templates/admin_footer'); -%>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  
  <%- include('admin_script'); -%>
    <script type="text/javascript">
    
            db.ref('/about').once('value', function(snapshot) { // load realtime
            let about = snapshot.val();
            $("#aboutTxt").text(about);
           
        });

        $('#simpanBtn').click(function() {
            let aboutNew = $('#aboutTxt').val();
           
            db.ref('/about').set(
               aboutNew

            , function(error) {
            if (error) {
                // The write failed...
                alert("Peringatan! Data Gagal Disimpan!")
            } else {
                // Data saved successfully!
                alert("Data Berhasil Disimpan!")
            }
            });
        });
    </script>   

</body>

</html>
