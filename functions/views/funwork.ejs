<!doctype html>
<html lang="id">

    <!-- Head Section -->
  <head>
    <%- include('templates/head'); -%>

  </head>
<!-- Head Section End -->
  
<body>
    <style>
    .carousel-inner > .carousel-item {
        height: 80vh;
    }

    .carousel-inner > .carousel-item > img {
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        max-height: 800px;
        width: auto;
    }

    .carousel-control-prev-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23ff0000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
    }

    .carousel-control-next-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23ff0000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
    }
    </style>

<!-- Header Section -->
<%- include('templates/header'); -%>
<!-- Header Section End -->
         <!-- Content Section -->
         <div class="container-fluid bg-light pb-5 my-4">
                <div class="container">
    
                    <!-- Project One -->
                  
                    <%  funwork.forEach(function(isi) { var data = isi.val(); %>
                    <div class="row pt-5">
                        <div class="col-md-8">
                                <% if (data.foto !== "") { %>
                                    <div id="<%= isi.key %>" class="carousel slide" data-ride="carousel">
                                       
                                        <div class="carousel-inner">
                                            <% for(var i in data.foto) { var obj = data.foto[i]; if (obj !== undefined){ %>
                                    
                                                <div class="carousel-item<% if (i === '0') { %> active <% } %>">
                                                    <img alt="<%= obj %>" class="img-responsive center-block" src="https://firebasestorage.googleapis.com/v0/b/cromosom1.appspot.com/o/funwork%2F<%= isi.key %>%2F<%= obj %>?alt=media">
                                                </div>
                                                
                                            <% }} %>
                                            
                                           
                                        </div>
                                        <a class="carousel-control-prev" href="#<%= isi.key %>" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#<%= isi.key %>" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                   
                                <% } else {%>
                                    <p>Tidak Ada Foto</p>
                                <% } %>
                                
                            
                        </div>
                        <div class="col-md-4">
                            <h3 class="reds" style="color:black"><%= data.nama %></h3>
                            <p><%= data.keterangan %></p>
                        </div>
                    </div>
                    <%  }); %>  
                    
                </div>
            </div>
            <!-- Content End -->

        <!-- Footer Section -->
        <%- include('templates/footer'); -%>
        <!-- Footer End -->


    </body>
</html>
